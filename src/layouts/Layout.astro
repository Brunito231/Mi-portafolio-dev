---
import "@fontsource-variable/onest"
import Badge from "../components/badge.astro";
import Header from "../components/Headerp.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import AboutMe from "../components/AboutMe.astro";
import Briefcase from "../components/Icons/Briefcase.astro";
import Code from "../components/Icons/Code.astro";
import Projects from "../components/Projects.astro";
import ProfileCheck from "../components/Icons/ProfileCheck.astro";
import Footer from "../components/Footer.astro";
import Contact from "../components/Contact.astro";
import Skills from "../components/Skills.astro";
import Appbar from "../components/Appbar.astro";

 
interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<link rel="icon" type="image/png" href="/linkpixel1.png" />
		<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" href="/linkpixel1.png" type="image/png">

		<title>{title}</title>
	</head>
	
	<body class="gradient-background">
		<Appbar> </Appbar>
		<div class="hero relative">
		  <video muted autoplay loop class="z-0">
			<source src="/particles.mp4" type="video/mp4">
		  </video>
		  <div class="capa"></div>
		  <div class="relative z-10">
			<Header></Header>
			<main>
			  <section class="w-full mx-auto lg:w-[740] py-44 flex flex-col items-center justify-center text-white">
