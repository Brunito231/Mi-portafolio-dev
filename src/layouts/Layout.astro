---
import "@fontsource-variable/onest"
import Badge from "../components/badge.astro";
import Header from "../components/Headerp.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import AboutMe from "../components/AboutMe.astro";
import Briefcase from "../components/Icons/Briefcase.astro";
import Code from "../components/Icons/Code.astro";
import Projects from "../components/Projects.astro";
import ProfileCheck from "../components/Icons/ProfileCheck.astro";
import Footer from "../components/Footer.astro";
import Contact from "../components/Contact.astro";

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" href="images/logo.jpg" type="image/png">
		<title>{title}</title>
	</head>
	<body>
	<div class="relative">
		<div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div>
		<Header></Header>
		<main>
			<section class="w-full mx-auto lg:w-[740] py-44 flex flex-col items-center justify-center text-white">
				<h1 class="text-5xl font-bold flex items-center flex-col gap-y-4">
					Me llamo Bruno Corvalan
					<Badge class="text-sm">empleo</Badge>
				</h1>
				<h2 class="text-xl opacity-80 text-center">
					Desarrollador Full-stack y estudiante de ingeniería en sistemas. Amante de los videojuegos, programador de mods y entusiasta de la tecnología. Especializado en desarrollo y programación web.				</h2>
				<div class="flex gap-4 mt-4">
					<a href="https://www.linkedin.com/in/bruno-corvalan-1a9766169/" class="icon-linkedin" target="_blank" rel="noopener noreferrer">
						<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-linkedin animate-bounce" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
							<path stroke="none" d="M0 0h24v24H0z" fill="none" />
							<path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" />
							<path d="M8 11l0 5" />
							<path d="M8 8l0 .01" />
							<path d="M12 16l0 -5" />
							<path d="M16 16v-3a2 2 0 0 0 -4 0" />
						</svg>
					</a>
					<a href="https://github.com/Brunito231?tab=repositories" class="icon-github" target="_blank" rel="noopener noreferrer">
						<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-github animate-bounce" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
							<path stroke="none" d="M0 0h24v24H0z" fill="none" />
							<path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
						</svg>
					</a>
				</div>
				
			</section>
		</main>
		<div class="mt-8">
    <SectionContainer id="Experiencia" class="mb-8">
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-white/80 dark:text-white">
            <Briefcase class="size-8" />
            Experiencia laboral
        </h2>
        <Experience />
    </SectionContainer>

    <SectionContainer id="Proyectos" class="mb-8">
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-white/80 dark:text-white">
            <Briefcase class="size-8" />
            Proyectos
        </h2>
        <Projects />
    </SectionContainer>
	<img class="object-cover w-16 h-16 rounded-l-lg md:w-48 md:h-auto md:rounded-none md:rounded-l-none" src="/images/prog.png" alt="Project Image">
    <SectionContainer id="sobre-mi" class="mb-8">
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-white/80 dark:text-white">
            <ProfileCheck class="size-8" />
            Sobre mí
        </h2>
        <AboutMe />
    </SectionContainer>

	<SectionContainer id="Contacto" class="mb-8">
        <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-white/80 dark:text-white">
            <ProfileCheck class="size-8" />
            Contacto
        </h2>
        <Contact />
    </SectionContainer>

</div>
<Footer></Footer>
	</body>
	
</html> 
<style is:global>
	:root {
		color-scheme: light dark;
		
		
	}
	html {
		font-family: "onest variable" system-ui, sans-serif;
		scroll-behavior: smooth;
		
	}
	.gradient-background {
    background: radial-gradient(125% 125% at 50% 10%, #000 40%, #63e 100%);
    background-attachment: fixed;
}
	body {
		background: #13151a;
		display: flex;
		flex-direction: column;
		height: 100vh;
		scroll-behavior: smooth;
		
		
	}
	@media (prefers-reduced-motion: reduce){
	html {
		scroll-behavior: auto;
	}
}


</style>
